<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="LootMaker.MainWindow"
        Title="LootMaker" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem x:Name="tabModifiers" Header="Modifiers">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="lbModifiers" HorizontalAlignment="Left" Width="150" Margin="0,0,0,22" SelectionChanged="lbModifiers_SelectionChanged"/>
                    <Button x:Name="btnModifiersNew" Content="New" HorizontalAlignment="Right" Width="75" VerticalAlignment="Bottom" Margin="0,0,424,0" Click="btnModifiersNew_Click"/>
                    <Button x:Name="btnModifiersDelete" Content="Delete" HorizontalAlignment="Left" Margin="75,258,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>
                    <TabControl Margin="155,0,10,10">
                        <TabItem x:Name="tabModifierGeneral" Header="General">
                            <Grid Background="#FFE5E5E5">
                                <TextBox x:Name="tbModiferName" HorizontalAlignment="Left" Margin="57,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
                                <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                                <ListBox x:Name="tbModifierTags" HorizontalAlignment="Left" Height="76" Margin="57,63,0,0" VerticalAlignment="Top" Width="190"/>
                                <Label Content="Tags" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top"/>
                                <Label Content="Type" HorizontalAlignment="Left" Margin="17,36,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="tbModifierType" HorizontalAlignment="Left" Margin="57,36,0,0" VerticalAlignment="Top" Width="190"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="tabModifierSubmodifiers" Header="Submodifiers">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemTest" Header="Item Test">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
