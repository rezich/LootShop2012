<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="LootMaker.MainWindow"
        Title="LootMaker" Height="480" Width="640">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ModifierItemTemplate">
                <TextBlock Text="{Binding Path=Name}"/>
            </DataTemplate>
        </Grid.Resources>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.36*"/>
    		<ColumnDefinition Width="0.64*"/>
    	</Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem x:Name="tabModifiers" Header="Modifiers">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="lbModifiers" HorizontalAlignment="Left" Width="150" Margin="0,0,0,25.96" SelectionChanged="lbModifiers_SelectionChanged" ItemsSource="{Binding}" ItemTemplate="{StaticResource ModifierItemTemplate}"/>
                    <Button x:Name="btnModifiersNew" Content="New" HorizontalAlignment="Left" Width="75" VerticalAlignment="Bottom" Margin="0,0,424,0" Click="btnModifiersNew_Click"/>
                    <Button x:Name="btnModifiersDelete" Content="Delete" HorizontalAlignment="Left" Margin="75,258,0,0" VerticalAlignment="Bottom" Width="75" IsEnabled="False" Click="btnModifiersDelete_Click" />
                    <TabControl Margin="155,0,10,10" IsEnabled="False" Name="tcModifiers" DataContext="{Binding ElementName=lbModifiers, Path=SelectedItem}">
                        <TabItem x:Name="tabModifierGeneral" Header="General">
                            <Grid Background="#FFE5E5E5">
                                <TextBox x:Name="tbModiferName" HorizontalAlignment="Left" Margin="57,10,0,0" VerticalAlignment="Top" Width="190" Text="{Binding Name}"/>
                                <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                                <ListBox x:Name="lbModifierTags" HorizontalAlignment="Left" Height="76" Margin="57,63,0,0" VerticalAlignment="Top" Width="190" ItemsSource="{Binding Tags}" IsManipulationEnabled="True" SelectionChanged="lbModifierTags_SelectionChanged" />
                                <Label Content="Tags" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top"/>
                                <Label Content="Type" HorizontalAlignment="Left" Margin="17,36,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="tbModifierType" HorizontalAlignment="Left" Margin="57,36,0,0" VerticalAlignment="Top" Width="190"/>
                                <Button Content="TEST" Height="23" HorizontalAlignment="Left" Margin="77,250,0,0" Name="btnModifierTest" VerticalAlignment="Top" Width="75" Click="btnModifierTest_Click" />
                                <Button x:Name="btnModifierTagsAdd" Content="Add" Margin="251,145,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="btnModifierTagsAdd_Click" />
                                <Button x:Name="btnModifierTagsRemove" Content="Remove" Margin="251,62,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" IsEnabled="False" Click="btnModifierTagsRemove_Click" />
                                <TextBox Height="23" HorizontalAlignment="Left" Margin="57,145,0,0" Name="tbModifierTagsNew" VerticalAlignment="Top" Width="190" />
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="tabModifierSubmodifiers" Header="Submodifiers">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemTest" Header="Item Test">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
